doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Reset password
  body(style='margin: 0px; font-size: 14px; font-family: "PTS"')
    div(style='width: 100%; display: inline-block; text-align: center;')
      div(style='width: 600px; padding: 10px 25px 10px 25px; margin: auto; margin-top: 70px;')
        div
          div(style='display: inline-block; margin-bottom: 30px;')
            div(style='background-image: url("http://tele-notes.7bits.it/img/gulp/logo-mail.png"); background-repeat: no-repeat;  width: 40px; height: 49px; display: inline-block; float: left;')
            div(style='background-image: url("http://tele-notes.7bits.it/img/gulp/dark-label.png"); float: left; margin-top: 15px; margin-left: 15px; width: 148px; height: 20px; background-repeat: no-repeat;')
          div(style='text-align: center; width: 90%; margin: auto;')
            div(style='color: black;') #{jm.getMessage('comfirmregmail.hello')} #{username}! #{jm.getMessage('comfirmregmail.comfirmemail')}
            br
            div(style='text-align: left; font-size: 13px; margin-bottom: 25px') #{jm.getMessage('comfirmregmail.notification')}
          hr(style='border-top: 1px solid #c0c0c0; width: 100%;')
          a(href="#{confirmLink}")
            button.btn-default(type='submit', style='margin-top: 10px; border-radius: 2px; border: 0px; color: white; background-color: rgb(32, 64, 108); width: 200px; height: 40px;') #{jm.getMessage('comfirmregmail.confirm')}
          br
        div(style='margin-top: 40px; color: #8e8e8e;')
