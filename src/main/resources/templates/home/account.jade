doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name="_csrf", content="#{_csrf.token}")
    meta(name="_csrf_header", content="#{_csrf.headerName}")
    link(rel='stylesheet', type='text/css', href='css/libCSS/bootstrap.css')
    link(rel='stylesheet', type='text/css', href='css/myCSS/telenote.css')
    link(rel='stylesheet', type='text/css', href='css/myCSS/account.css')
    link#dinamic(rel='stylesheet', type='text/css', href='css/myCSS/'+user.style+'.css')
    script(src='js/jsLibs/jquery-1.11.3.js')
    script(src='js/myJS/app.js')
    script(src='js/myJS/preventSelection.js')
    script(src='js/myJS/account.js')
  body
    .container
      .headWrapper
        .logoDiv
          a(href='/telenote')
            .logoImg
            .slogon
        .in-outMenu
          .logMenu
            a#username(href='#')
              .user#{user.username}
            a#logout(href='/logout') Выход
          .userImg
      .workDiv
        .changeName
          input#changeNameTextbox(type='textbox', value='#{user.username}', maxlength='20')
          button#changeNameBtn Сменить имя
        input(type='hidden', name='#{_csrf.parameterName}', value='#{_csrf.token}')
        .changePass
          form(role='form', action='/account/changepass', method='POST', name='changePassForm')
            input#changePassTextboxOld(type='password', name='oldPass', placeholder='старый пароль', maxlength='20', value='#{signupForm.oldPass}')
            input#changePassTextboxNew(type='password', name='newPass', placeholder='новый пароль', maxlength='20', value='#{signupForm.newPass}')
          button#changePassBtn Сменить пароль
          label#changePassMessage.changePassMessage
        .userStyle
          .dropdownStyles
            select#select(value='#{user.style}')
              option Сменить тему
              option(value='darkDen') darkDen
              option(value='lightDen') lightDen
        a#onMain(href='/telenote')
          button(href='/telenote') На главную