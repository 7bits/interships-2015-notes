doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name="_csrf", content="#{_csrf.token}")
    meta(name="_csrf_header", content="#{_csrf.headerName}")
    link(rel='stylesheet', type='text/css', href='css/myCSS/telenote.css')
    link(rel='stylesheet', type='text/css', href='css/myCSS/account.css')
    link#dinamic(rel='stylesheet', type='text/css', href='css/myCSS/'+user.style+'.css')
    script(src='js/jsLibs/jquery-1.11.3.js')
    script(src='js/myJS/preventSelection.js')
    script(src='js/myJS/account.js')
  body
    .container
      .headWrapper
        .logoDiv
          a(href='/telenote')
            .logoImg
            .slogon
        .in-outMenu
          .logMenu
            a#username(href='/account')
              .user#{user.username}
            a#logout(href='/logout') Выход
          .userImg
      form.workDiv(role='form', action='/account', method='POST', name='changesForm')
        input(type='hidden', name='#{_csrf.parameterName}', value='#{_csrf.token}')
        .profileDiv
          .profileHeader Профиль
          .nameDiv
            label.labelName Имя
            input.username(type='textbox', name='username', value='#{user.username}')
            if username
              #js-nameDiv.errorUsernameDiv
                span#js-name Имя не должно быть с пробелом
          .emailDiv
            label.labelEmail Адрес
            label.email#{user.email}
        .passwordDiv
          .passwordHeader Пароль
          .currentPassDiv
            label.labelCurrentPass Текущий пароль
            input.currentPass(type='password', name='currentPass', value='#{changesForm.currentPass}')
            if password
              .errorPassDiv.oldErrorPass
                span#js-oldPass Пароли совпадают
            if oldPass
              #js-errorDiv.errorPassDiv.oldErrorPass
                span#js-oldPass Неверный пароль
          .newPassDiv
            label.labelNewPass Новый пароль
            input.newPass(type='password', name='newPass', value='#{changesForm.newPass}')
            if newPass
              #js-errorDiv.errorPassDiv.newErrorPass
                span#js-newPass Пароль слишком прост
        .themeDiv
          .themeHeader Дизайн
          .themes
            input#hidden(type='hidden', value=user.style, name='theme')
            #lightDen.theme.theme1.js-theme
            #darkDen.theme.theme2.js-theme
        button.submit(type='submit') Сохранить изменения
